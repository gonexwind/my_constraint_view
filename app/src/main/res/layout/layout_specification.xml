<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textSpecification"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/specification"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textSpecDisplayTitle"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/display"
        app:layout_constraintTop_toBottomOf="@+id/textSpecification"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="51dp"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textSpecDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/content_specs_display"
        app:layout_constraintTop_toBottomOf="@+id/textSpecification"
        app:layout_editor_absoluteX="106dp"
        app:layout_editor_absoluteY="51dp"
        tools:layout_editor_absoluteX="106dp" />

    <TextView
        android:id="@+id/textSpecSizeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/size"
        app:layout_constraintTop_toBottomOf="@+id/textSpecDisplay"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="115dp"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textSpecSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/content_specs_size"
        app:layout_constraintTop_toBottomOf="@+id/textSpecDisplay"
        app:layout_editor_absoluteX="106dp"
        app:layout_editor_absoluteY="115dp"
        tools:layout_editor_absoluteX="106dp" />

    <TextView
        android:id="@+id/textBatteryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/battery"
        app:layout_constraintTop_toBottomOf="@+id/textSpecSize"
        app:layout_editor_absoluteX="16dp"
        app:layout_editor_absoluteY="165dp"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textBattery"
        android:layout_width="0dp"
        android:layout_height="266dp"
        android:layout_marginTop="8dp"
        android:text="@string/content_specs_battery"
        app:layout_constraintTop_toBottomOf="@+id/textSpecSize"
        app:layout_editor_absoluteX="106dp"
        app:layout_editor_absoluteY="165dp"
        tools:layout_editor_absoluteX="106dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="106dp" />

</androidx.constraintlayout.widget.ConstraintLayout>